<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>app</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>${appjar.bannerfile}</source>
			<destName>custom_banner.txt</destName>
			<outputDirectory>${appjar.bootInfoPath}</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>
	<fileSets>

		<!-- dependencies -->
		<fileSet>
			<directory>${appjar.buildDir}</directory>
			<outputDirectory></outputDirectory>
		</fileSet>

	</fileSets>

	<dependencySets>
		<dependencySet>
			<outputDirectory>${appjar.mainLibPath}</outputDirectory>
			<includes>
				<include>${project.groupId}:${project.artifactId}:*</include>
			</includes>
			<useProjectArtifact>true</useProjectArtifact>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<unpack>true</unpack>
		</dependencySet>

	</dependencySets>

</assembly>